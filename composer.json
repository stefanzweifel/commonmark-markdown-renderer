{
    "name": "wnx/commonmark-markdown-renderer",
    "description": "Render Markdown AST back to Markdown.",
    "keywords": [
        "wnx",
        "markdown",
        "renderer",
        "commonmark-markdown-renderer"
    ],
    "homepage": "https://github.com/stefanzweifel/commonmark-markdown-renderer",
    "license": "MIT",
    "authors": [
        {
            "name": "Stefan Zweifel",
            "email": "stefan@stefanzweifel.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "league/commonmark": "^2.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.5",
        "spatie/ray": "^1.28",
        "vimeo/psalm": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "Wnx\\CommonmarkMarkdownRenderer\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Wnx\\CommonmarkMarkdownRenderer\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
